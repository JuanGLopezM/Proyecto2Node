{{#with gameDetails}}
<h1>More info about {{title}}</h1>
<img src={{thumbnail}} alt={{title}}>
<p type="hidden">{{id}}</p>
<p>Description: {{description}}</p>
<p>Genre: {{genre}}</p>
<p>Platform: {{platform}}</p>
<p>Publisher: {{publisher}}</p>
<p>Developer: {{developer}}</p>
<p>Release date: {{release_date}}</p>
<p>Profile url: {{freetogame_profile_url}}</p>

{{/with}}

<h2>Users Feedback</h2>
{{#each singleComment}}
<p>Comment: {{comment}}</p>
<p>User: {{user}}</p>
<form action = "/edit-comment" method="POST">
        <textarea class="text" name="comment">{{comment}}</textarea>
        <input type="hidden" name="commentID" value="{{_id}}">
        {{!-- <input type="hidden" name="apiID" value="{{id}}"> --}}
        <button type="submit">Edit</button>
        </form>
{{/each}}

