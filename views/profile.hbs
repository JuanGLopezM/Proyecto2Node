<div class='container'>
<br>
<h1 class="font">{{user.username}}'s FAVs:</h1>
<br>


<div class="row ">
{{#each userGames.favorites}}
<div class='col-sm-4 mb-3'>
    <div class='card bg-dark text-white shadow-sm'>
     <form action = "/details/{{id}}" method="GET">
      <input type="hidden" name="id" value="{{id}}">
      <input type="hidden" name="title" value="{{title}}">
      <button class="btn btn-default">
      <img src="{{thumbnail}}" class="img-fluid"/></button>
      </form>
    <div class="ml-3 mr-3">
      <p>Title: {{title}}</p>
      <p>Genre: {{genre}}</p>
      {{!-- <p>Description: {{short_description}}</p> --}}
    </div>
    <form action = "/delete-favorite" method="POST">
    <input type="hidden" name="_id" value={{_id}}>
    <button type="submit" class="btn btn-success btn-block ">Delete game</button>
    </form>
  </div>
</div>
{{/each}}
</div>
</div>
